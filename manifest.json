{
  "manifest_version": 2,
  "name": "ImageSearchGo",
  "version": "1.0",
  "description": "Unleash the possibility to search Google Image quickly and incredibly, with copy & paste.",
  "content_scripts": [
    {
      "matches": ["*://www.google.com/imghp", "*://images.google.com/"],
      "js": ["js/main.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "ImageSearchGo",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": ["tabs"]
}
