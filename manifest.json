{
  "manifest_version": 2,
  "name": "Image Search Go",
  "version": "1.1",
  "description": "Unfetter the possibility to search Google Images quickly and incredibly, with copy & paste.",
  "author": "Leslie Wong",
  "content_scripts": [
    {
      "matches": [
        "*://google.com/imghp*",
        "*://www.google.com/imghp*",
        "*://www.google.com.hk/imghp*",
        "*://google.com/*tbm=isch*",
        "*://www.google.com/*tbm=isch*",
        "*://google.com/*tbs=sbi*",
        "*://www.google.com/*tbs=sbi*",
        "*://images.google.com/*",
        "*://images.google.com.hk/*"
      ],
      "js": ["js/main.js"]
    }
  ],
  "icons": {
    "16": "images/imageSearchGo_16.png",
    "48": "images/imageSearchGo_48.png",
    "128": "images/imageSearchGo_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/imageSearchGo_19.png",
      "38": "images/imageSearchGo_38.png"
    },
    "default_title": "ImageSearchGo",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["https://sm.ms/api/v2/upload"]
}
